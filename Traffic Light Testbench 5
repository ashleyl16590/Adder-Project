//Testbench
module test;
  
  reg clock, reset, em;
  wire nr, ny, ng, nly, nlg, sr, sy, sg, sly, slg, er, ey, eg, ely, elg, wr, wy, wg, wly, wlg;
  
  //Instantiate device under test
  fsm_traffic_light FTL(.clock(clock),
